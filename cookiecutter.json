{
    "project_title": "",
    "project_name": "{{ cookiecutter.project_title.lower().replace(' ', '-') }}",
    "package_name": "{{ cookiecutter.project_name.replace('-', '_') }}",
    "version": "0.0.1",
    "project_description": "Project description",
    "open_source": "y",
    "docs": "{{ cookiecutter.open_source }}",

    "full_name": "",
    "email": "",

    "github_username": "",
    "bitbucket_username": "",
    "git_repo": "git@{% if cookiecutter.open_source == 'y' %}github.com:{{cookiecutter.github_username}}{% else %}bitbucket.org:{{cookiecutter.bitbucket_username}}{% endif %}/{{cookiecutter.project_name}}.git",
    "git_url": "https://{% if cookiecutter.open_source == 'y' %}github.com/{{cookiecutter.github_username}}{% else %}bitbucket.org/{{cookiecutter.bitbucket_username}}{% endif %}/{{cookiecutter.project_name}}",

    "python_version": "3.6",
    "python_max_line_length": 120
}
